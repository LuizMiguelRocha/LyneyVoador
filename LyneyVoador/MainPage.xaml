<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LyneyVoador.MainPage"
             Shell.NavBarIsVisible="false">

       <Grid>
              <Image Source="fundo.png"
                     Aspect="AspectFill"
                     HorizontalOptions="Fill"
                     VerticalOptions="Fill"/>

              <Image Source="lyney.png"
                     x:Name="imglyney"
                     Aspect="Fill"
                     HeightRequest="80"
                     WidthRequest="80"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"/>

              <Image Source="canobaixo.png"
                     x:Name="imgcanobaixo"
                     HeightRequest="650"
                     WidthRequest="30"
                     Aspect="AspectFill"
                     HorizontalOptions="End"
                     VerticalOptions="End"/>

              <Image Source="canocima.png"
                     x:Name="imgcanocima"
                     HeightRequest="650"
                     WidthRequest="30"
                     Aspect="AspectFill"
                     HorizontalOptions="End"
                     VerticalOptions="Start"/>

              <Image Source="piso.png"
                     x:Name="imgChao"
                     VerticalOptions="End"
                     HorizontalOptions="Fill"/>

              <Label x:Name="labelScore"
                     HorizontalOptions="Start"
                     VerticalOptions="Start"
                     BackgroundColor="#82d2b5"
                     TextColor="White"/>

              <Frame
                     IsVisible="true"
                     x:Name="FrameGameOver"
                     BackgroundColor="#99000000"
                     HorizontalOptions="Fill"
                     VerticalOptions="Fill"
                     CornerRadius="0">
                     <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Oi"/>
                     </Frame.GestureRecognizers>
                     <Label x:Name="fianlScore"
                            FontSize="35"
                            TextColor="White"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            BackgroundColor="#82d2b5"/>

              </Frame>

              <Grid.GestureRecognizers>
                     <TapGestureRecognizer Tapped="OnGridClicked"/>
              </Grid.GestureRecognizers>

       </Grid>
</ContentPage>
